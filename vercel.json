{
    "version": 2,
    "builds": [
        {
            "src": "client/index.html",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "client/build"
            }
        },
        {
            "src": "server/server.js",
            "use": "@vercel/node",
            "config": {
                "distDir": "server/build"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server/server.js"
        }
    ]
}